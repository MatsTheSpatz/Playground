@model IEnumerable<Tuple<int,string>>
@{
    ViewBag.Title = "Start Page";
}


<h2>@ViewBag.Message</h2>

<div>
    <ul id="recipeList">
        @foreach  (var recipe in @Model)
        {
            <li>                
                @Html.ActionLink("ID" + recipe.Item1, "Open", "BlankRecipeEditor", new { recipeId = recipe.Item1 }, null)
                @(recipe.Item2)
            </li>
        }
    </ul>
</div>

<hr/>


<script type="text/javascript">
    // Popup window code
    function newPopup(url) {
        window.open(url,'Rezept','height=740,width=600,resizable=yes,scrollbars=yes,toolbar=no,menubar=no,location=no,directories=no,status=no'
        );
    }
</script>
<a href="JavaScript:newPopup('/BlankRecipeEditor/Open?RecipeId=-1');">Open Editor</a>
